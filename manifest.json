{
  "manifest_version": 3,
  "name": "Learners Treasure",
  "version": "6.0",
  "description": "Auto-extract YouTube transcript and generate AI summaries & quizzes using Groq AI.",
  "permissions": ["activeTab", "tabs", "scripting"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://api.groq.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
